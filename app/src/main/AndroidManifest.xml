<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mareu">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mareu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mareu1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Maréu">

        <activity
            android:name=".ui.AddMeetingActivity"
            android:label="New Meeting"
            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="fullSensor"/>
        
        <activity
            android:name=".ui.ListMeetingActivity"
            android:label="Maréu"
            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="fullSensor"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    </application>

</manifest>
